package com.funcom.project.service.implementation.inventory.struct.itemtemplate 
{
	import flash.events.EventDispatcher;
	
	public class CardPackItemTemplate extends ItemTemplate
	{
		/************************************************************************************************/
		/*	Const var																					*/
		/************************************************************************************************/
		
		/************************************************************************************************/
		/*	Member var																					*/
		/************************************************************************************************/
		protected var _numberOfCards:int;
		
		/************************************************************************************************/
		/*	Constructor / Init / Dispose																*/
		/************************************************************************************************/
		public function CardPackItemTemplate(aXmlNode:XML) 
		{
			super(aXmlNode);
			
			if (aXmlNode == null)
			{
				return;
			}
			_numberOfCards = int(aXmlNode["numberOfCards"]);
		}
		
		/************************************************************************************************/
		/*	Public																						*/
		/************************************************************************************************/
		
		/************************************************************************************************/
		/*	Private																						*/
		/************************************************************************************************/

		/************************************************************************************************/
		/*	Handler																						*/
		/************************************************************************************************/
		
		/************************************************************************************************/
		/*	Getter / Setter																				*/
		/************************************************************************************************/
		public function get numberOfCards():int 
		{
			return _numberOfCards;
		}
	}
}