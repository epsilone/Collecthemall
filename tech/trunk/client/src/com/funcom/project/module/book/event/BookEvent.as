event.pageRef = pageRef;			event.cardSlotRef = cardSlotRef;						return event;		}				/************************************************************************************************************		* Getter/Setter Methods																						*		************************************************************************************************************/		public function get bookRef():Book 		{			return _bookRef;		}				public function set bookRef(value:Book):void 		{			_bookRef = value;		}				public function get pageRef():Page 		{			return _pageRef;		}				public function set pageRef(value:Page):void 		{			_pageRef = value;		}				public function get cardSlotRef():CardSlot 		{			return _cardSlotRef;		}				public function set cardSlotRef(value:CardSlot):void 		{			_cardSlotRef = value;		}	}}